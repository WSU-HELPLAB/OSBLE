@model OSBLE.Models.AbstractCourses.Course.WhiteTableUser
@using OSBLE.Models
@using OSBLE.Models.Courses

@{
    ViewBag.Title = "Edit WhiteListed User";
    CourseUser client = ViewBag.ActiveCourseUser as CourseUser;
    
}

<h2>EditWTUser</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.Email)
    @Html.HiddenFor(model => model.Name1)
    @Html.HiddenFor(model => model.Name2)
    @Html.HiddenFor(model => model.CourseID)
    @Html.HiddenFor(model => model.SchoolID)
    @Html.HiddenFor(model => model.Identification)
    @Html.HiddenFor(model => model.ID)
    

    <div class="editor-label">
        @Html.LabelFor(model => model.Name1, "Name")
        @Helpers.CreateToolTip(ToolTips.RosterUserName)
    </div>
    <div class="editor-label">
        <input type="text" disabled="disabled" value="@Model.Name1 @Model.Name2" />
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Email)
        @Helpers.CreateToolTip(ToolTips.RosterEmail)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Email)
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Identification, "Identification Number")
        @Helpers.CreateToolTip(ToolTips.RosterIdentificationNumber)
    </div>
    <div class="editor-label">
        @Html.TextBoxFor(model => model.Identification)
        @Html.ValidationMessageFor(model => model.Identification)
    </div>
    <p>
        <input type="submit" value="Save Whitelisted User" />
    </p>

}

<div>
    @Html.ActionLink("Back to Users", "Index")
</div>
