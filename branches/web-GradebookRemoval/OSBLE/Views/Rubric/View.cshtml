@model OSBLE.Models.ViewModels.RubricViewModel
@using OSBLE.Models.Courses.Rubrics;
@using OSBLE.Models.Assignments;

@{
    ViewBag.Title = "Rubric Evaluation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rubric Evaluation of @ViewBag.AssignmentName </h2>
@*<a href="/Rubric/ExportAllToCSV">Export Rubric For Each Student</a>*@
@Html.ActionLink("Export All Rubric's", "ExportAllToCSV", new { assignID = Model.SelectedAssignment.ID }, new { })
<a href="/Rubric/ImportAllToCSV">Import Rubric For Each Student</a>
<div><br /></div>


@if (ViewBag.Score != null)
{
    <h3>Grade: @(Math.Round((ViewBag.Score as Score).Points / ViewBag.PossiblePoints * 100, 2))%</h3>
}

          
@Html.Partial("_Display", Model)
          
