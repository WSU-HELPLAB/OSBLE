<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  x:Class="FileUploader.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot"  Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="120"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" MinWidth="120"/>
        </Grid.ColumnDefinitions>
        <sdk:Label Grid.Row="0" Grid.Column="0" Content="Local Files" FontWeight="Bold" FontSize="16" Margin="0,5,0,5" 
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <ScrollViewer x:Name="VertScrollBarLocal" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch">
            <ListBox Name="LocalFileList" HorizontalAlignment="Stretch" MouseLeftButtonUp="LocalDirSelect"></ListBox>
        </ScrollViewer>
        <sdk:GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" VerticalAlignment="Stretch" HorizontalAlignment="Center" 
                          Background="DarkSlateGray" Width="3" />
        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="2"  HorizontalAlignment="Right" VerticalAlignment="Center" 
                    Margin="0,0,5,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="16" FontWeight="Bold" Text="Uploading To:" />
                <ComboBox x:Name="UploadLocation" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="Upbtn" Content="UP" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0" 
                    Click="MoveUpbtn_Click" />
                <Button x:Name="Downbtn" Content="DOWN" HorizontalAlignment="Right" VerticalAlignment="Center" 
                    Click="MoveDownbtn_Click"/>
            </StackPanel>
        </StackPanel>
        <ScrollViewer x:Name="VertScrollBarSynced" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch">
            <ListBox Name="SyncedFileList" HorizontalAlignment="Stretch" MouseLeftButtonUp="SyncDirSelect"></ListBox>
        </ScrollViewer>
        <Button x:Name="Syncbtn" Content="Sync Visable Files" Grid.Column="0" Grid.Row="2" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Click="Syncbtn_Click"/>
        <TextBlock x:Name="lblStatus"/>
    </Grid>
</UserControl>