<Window x:Class="OSBIDE.Controls.UpdateAvailableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OSBIDE Update Available" Height="128" Width="291">
    <Grid>
        <TextBlock TextWrapping="Wrap">
            An update to OSBIDE is available.  Please visit
            <Hyperlink x:Name="UpdateLink">
                <TextBlock x:Name="UpdateLinkText" Text="{Binding Path=NavigateUri}"></TextBlock>
            </Hyperlink>
            to download and install the latest version.
        </TextBlock>
        <Button x:Name="OkButton" Content="OK" Width="50" Height="25" Margin="0,0,0,3" VerticalAlignment="Bottom" />
    </Grid>
</Window>
