@using OSBLE.Models.HomePage;
@using OSBLE.Models.Courses;
@{
    AbstractDashboard dp = ViewBag.dp;
    AbstractCourse course = new Course();
    
    if (dp is DashboardPost) {
        course = (dp as DashboardPost).Course;
    } else if (dp is DashboardReply) {
        course = (dp as DashboardReply).Parent.Course;
    }
    
}

        <div class="dp_post" id="dp_post_@(dp.ID)">
            <div class="dp_post_header">
                @* Reply Only *@
                @if (dp is DashboardReply)
                {
                    <script>
                        @* Updates maximum reply for this post so new replies can return any interim posts. *@
                        $(function() {
                            $('#latest_reply_@((dp as DashboardReply).Parent.ID)').val(Math.max($('#latest_reply_@((dp as DashboardReply).Parent.ID)').val(),@(dp.ID)));
                        });
                    </script>

                }

                @* Profile Picture *@

                @if (dp.ShowProfilePicture)
                {
                    @Helpers.ProfilePicture(Url.Action("ProfilePictureForDashboard", new { course = course.ID, userprofile = dp.UserProfileID }));
                }
                else
                {
                    @Helpers.DefaultProfilePicture();
                }

                @* Show course tag if viewing posts for all courses *@

                @if (!ViewBag.DashboardSingleCourseMode)
                {
                    <span class="dp_course">@Helpers.CourseTag(course)</span>
                }
                
                @* Poster's Name *@
                
                @Helpers.DisplayNameForDashboard(dp)

                @* Mail and Delete Buttons *@
                <span class="dp_tools">
                @if (dp.CanMail)
                {
                    <a href="@Url.Action("Create", "Mail", new { recipientID = dp.UserProfileID })">@Helpers.MailButton()</a>
                }
                @if (dp.CanDelete)
                {
                    string deleteAction = "";
                    string deleteConfirm = "";
                    if (dp is DashboardPost)
                    {
                        deleteAction = "DeletePost";
                        deleteConfirm = "Are you sure you want to delete this post and all its replies?";
                    }
                    else if (dp is DashboardReply)
                    {
                        deleteAction = "DeleteReply";
                        deleteConfirm = "Are you sure you want to delete this reply?";
                    }
                        
                    <form action="@Url.Action(deleteAction)"
                        style="display: inline;"
                        data-ajax="true"
                        data-ajax-success="$('#dp_post_@(dp.ID)').hide('blind',{},'slow',function(){$(this).remove();})"
                        data-ajax-confirm="@deleteConfirm"
                        method="post">
                        <input type="hidden" name="ID" value="@dp.ID" />
                        @Helpers.DeleteSubmit()
                    </form>
                }
                </span>
                <br />
                @* Posting Date *@

                <span class="dp_posted">@Helpers.DisplayDate(dp.Posted)</span>
            </div>

            @* Post Content *@
            <div class="dp_content">
                @Helpers.Linkify(dp.Content)
            </div>

            @if (dp is DashboardPost)
            {
            @* Post Replies *@
            <div class="dp_replies">
                <div id="dp_replies_for_@(dp.ID)">
                @foreach (DashboardReply dr in (dp as DashboardPost).Replies)
                {
                    ViewBag.dp = dr;
                    @Html.Partial("_DashboardPost");
                }
                </div>

                @* New Reply Box *@

                @if ((dp as DashboardPost).CanReply)
                {
                <div class="dp_replylink">
                    <a href="#" id="reply_@(dp.ID)">Reply</a>
                </div>
                <div class="dp_replybox" id="replybox_@(dp.ID)">
                    <form action="@Url.Action("NewReply")"
                        data-ajax="true"
                        data-ajax-update="#dp_replies_for_@(dp.ID)"
                        data-ajax-success="$('.dp_new_post').show('blind',{},'slow',function(){$(this).removeClass('dp_new_post');}); $('#dp_replybox_content_@(dp.ID)').val('')"
                        data-ajax-mode="after"
                        method="post">
                        <input type="hidden" name="reply_to" value="@dp.ID" />
                        <input type="hidden" name="latest_reply" value="0" id="latest_reply_@(dp.ID)" />
                        <textarea name="Content" rows="5" cols="40" id="dp_replybox_content_@(dp.ID)" placeholder="Enter reply here..."></textarea><br />
                        <input type="submit" name="post_reply" value="Post Reply" />
                    </form>

                    <br />
                    <div class="dp_replylink">
                        <a href="#" id="replycancel_@(dp.ID)">Cancel</a>
                    </div>
                </div>
                <script type="text/javascript">
                    $("#reply_@(dp.ID)").click(function () {
                        $("#reply_@(dp.ID)").hide();
                        $("#replybox_@(dp.ID)").show('blind');
                        return false;
                    });

                    $("#replycancel_@(dp.ID)").click(function () {
                        $("#reply_@(dp.ID)").show('highlight');
                        $("#replybox_@(dp.ID)").hide('blind');
                        return false;
                    });

                </script>
                }
                <div id="after_replies_@(dp.ID)"></div>
            
            </div>
            } @* End of Replies *@
        </div>
