@model OSBLE.Models.CoursesUsers

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>CoursesUsers</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.UserProfileID, "ID Number")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserProfile.Identification)
            @Html.ValidationMessageFor(model => model.UserProfile.Identification)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CourseID, "Course")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CourseID", String.Empty)
            @Html.ValidationMessageFor(model => model.CourseID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CourseRoleID, "CourseRole")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CourseRoleID", String.Empty)
            @Html.ValidationMessageFor(model => model.CourseRoleID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Section)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Section)
            @Html.ValidationMessageFor(model => model.Section)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
