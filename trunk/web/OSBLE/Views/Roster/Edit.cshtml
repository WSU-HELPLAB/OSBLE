@model OSBLE.Models.Courses.CoursesUsers
@using OSBLE.Models

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.UserProfileID)
        @Html.HiddenFor(model => model.CourseID)

        <div class="editor-label">
            @Html.LabelFor(model => model.UserProfileID, "Name")
            @Helpers.CreateToolTip(ToolTips.RosterUserName) 
        </div>
        <div class="editor-label">
            @Model.UserProfile.FirstName @Model.UserProfile.LastName
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CourseRoleID, "CourseRole")
            @Helpers.CreateToolTip(ToolTips.RosterRole) 
        </div>
        <div class="editor-field">
            @Html.DropDownList("CourseRoleID", String.Empty)
            @Html.ValidationMessageFor(model => model.CourseRoleID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Section) <em>(Enter 0 for all sections)</em>
            @Helpers.CreateToolTip(ToolTips.RosterSection) 
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Section, new { size = 3 })
            @Html.ValidationMessageFor(model => model.Section)
        </div>

        <p>
            <input type="submit" value="Save User" />
            @Helpers.CreateToolTip(ToolTips.RosterSave) 
        </p>

}

<div>
    @Html.ActionLink("Back to Users", "Index")
    @Helpers.CreateToolTip(ToolTips.RosterBack) 
</div>
