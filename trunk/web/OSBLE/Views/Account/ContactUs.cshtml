@model OSBLE.Models.ContactUsModel

@using OSBLE.Models

@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_LogOn.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@Html.ValidationSummary(true, "Contact was unsuccessful. Please correct the errors and try again.")

<h2>Contact Us</h2>

@using (Html.BeginForm("ContactUs", "Account", FormMethod.Post))
{
    <div>
        <div class="editor-label">
            @Html.LabelFor(m => m.Name)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Name, new { tabindex = "1" })<br />
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(m => m.Email)
            @Helpers.CreateToolTip(ToolTips.AccountContactEmail) 
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m => m.Email, new { tabindex = "2" })<br />
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="editor-label">
            @Html.LabelFor(m => m.Message)
            @Helpers.CreateToolTip(ToolTips.AccountContactMessage) 
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(m => m.Message, 10, 50, new { tabindex = "3" })<br />
            @Html.ValidationMessageFor(m => m.Message)
        </div>
        <div>
            @Html.Partial("_ReCaptcha")
        </div>
        <p>
            <input type="submit" value="Submit" />
        </p>
    </div>
}
