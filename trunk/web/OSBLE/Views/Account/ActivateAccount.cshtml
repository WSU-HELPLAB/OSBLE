@model OSBLE.Models.LogOnModel
@{
    ViewBag.Title = "ActivateAccount";
    Layout = "~/Views/Shared/_LogOn.cshtml";
}

<h2>Activate Account</h2>


@using (Html.BeginForm()) {
    @Html.HiddenFor(m => m.Password)
    @Html.ValidationSummary() 
    <div>
            <div class="editor-label">
                Authentication Code
            </div>
            <div class="editor-field">
                <input id="hash" type="text" name="hash" value="@ViewBag.Hash" />
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.UserName, "Email Address")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName, new { tabindex = "1" })<br />
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <p>
                <input type="submit" value="Activate Account" name="activate" />
                <input type="submit" value="Request new activation code" name="newCode" />
            </p>

            </div>
            }