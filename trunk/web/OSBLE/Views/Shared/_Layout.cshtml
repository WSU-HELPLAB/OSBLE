<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>OSBLE - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <header>
        <div id="header">
		    <div id="top_bar">
    			<div id="top_content">
				        <span class="top_item">
                        @if (ViewBag.UserProfile != null)
                        {
                            @ViewBag.UserProfile.FirstName
                            <text> </text>
                            @ViewBag.UserProfile.LastName
                            <text> &mdash; </text>
                            <em>@ViewBag.UserProfile.School.Name</em>
                        }</span>
                        <a href="@Url.Action("Profile", "Account")" class="top_item"><img src="../../Content/images/account.png" alt="Account" /></a>
                    <a href="@Url.Action("LogOff", "Account")" class="top_item"><img src="../../Content/images/logoff.png" alt="Logoff" /></a>
			    </div>
		    </div>
		    <div id="logo">
                <img src="../../Content/images/logo.png" alt="OSBLE Logo" />
		    </div>
		    <div id="logo_text">
    			<img src="../../Content/images/logo_text.png" alt="OSBLE" />
		    </div>
		    <div id="courses">
    			Course:
			    <select id="course_select">
    				<option>All Courses</option>
				    <option>CptS 121 Introduction to Programming</option>
			    </select>
		    </div>
        </div>
    </header>

    <nav>
        @Html.Partial("_MenuControl")
    </nav>
    <section id="main">
        <div id="content">
            @RenderBody()
        </div>
    </section>
    
    <footer>
    </footer>

</body>
</html>
