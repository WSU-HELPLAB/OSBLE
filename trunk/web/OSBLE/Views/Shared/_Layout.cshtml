<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>OSBLE - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <header>
        <div id="header">
		    <div id="top_bar">
    			<div id="top_content">
				        <span class="top_item">
                        @if (ViewBag.CurrentUser != null)
                        {
                            @ViewBag.CurrentUser.FirstName
                            <text> </text>
                            @ViewBag.CurrentUser.LastName
                            <text> &mdash; </text>
                            <em>@ViewBag.CurrentUser.School.Name</em>
                        }</span>
                        <a href="@Url.Action("ChangePassword", "Account")" class="top_item"><img src="../../Content/images/account.png" alt="Account" /></a>
                    <a href="@Url.Action("LogOff", "Account")" class="top_item"><img src="../../Content/images/logoff.png" alt="Logoff" /></a>
			    </div>
		    </div>
		    <div id="logo">
                <a href="/"><img src="../../Content/images/logo.png" alt="OSBLE Logo" /></a>
		    </div>
		    <div id="logo_text">
    			<a href="/"><img src="../../Content/images/logo_text.png" alt="OSBLE" /></a>
		    </div>
		    <div id="courses">
                @Html.Partial("_CourseList")

		    </div>
        </div>
    </header>
    <nav>
        @Html.Partial("_MenuControl")
    </nav>
    <section id="main">
        <div id="content">
            @RenderBody()
        </div>
    </section>
    <footer>
    </footer>
</body>
</html>