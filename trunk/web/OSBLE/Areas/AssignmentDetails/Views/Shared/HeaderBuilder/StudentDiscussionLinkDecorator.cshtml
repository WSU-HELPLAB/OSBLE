@using OSBLE.Resources
@using OSBLE.Models.Assignments
@model DynamicDictionary
@{
    dynamic dataModel = Model;
    List<DiscussionTeam> discussionTeams = dataModel.StudentDiscussion.DiscussionTeams;   
    Assignment assignment = dataModel.StudentDiscussion.assignment;         
}
<tr>
    <th>
        Discussion
    </th>
    <td>

            <table id="CriticalReviews">
                @foreach (DiscussionTeam dt in discussionTeams)
                {
                    //Display string should also display who the discussion is for if it is not classwide.
                    string displayValue = "View Discussion";
                    if (assignment.HasDiscussionTeams == true) 
                    {
                        displayValue += " for " + dt.Team.Name;
                    }
                    <tr>
                        <td>
                         @Html.ActionLink(displayValue, 
                         "Index", "DiscussionAssignment",
                         new { assignmentId = assignment.ID, discussionTeamId = dt.ID, area = "" }, 
                         new { })
                        </td>
                    </tr>
                }
            </table>

    </td>
</tr>
