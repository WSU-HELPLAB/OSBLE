@using OSBLE.Resources
@using OSBLE.Models.Assignments
@model DynamicDictionary
@{
    dynamic dataModel = Model;
    IAssignmentTeam currentTeam = dataModel.AssignmentTeam as IAssignmentTeam;
    Score score = dataModel.Score as Score;
}
<td>
@if (score != null)
{
    <div class="LatePenaltyDiv">
    @score.getAppliedLatePenaltyAsDecimal().ToString("P") 
    <a 
        onclick="openManualLatePenWindow(@score.ID, @currentTeam.Team.TeamMembers.FirstOrDefault().CourseUser.ID, @currentTeam.Assignment.ID);"
        >@Helpers.EditButton()</a>    
    </div>
}
else
{
    <text>0.00%</text>
}
</td>
