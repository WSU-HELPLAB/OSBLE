@using OSBLE.Areas.AssignmentWizard.Controllers
@using OSBLE.Areas.AssignmentWizard.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Header
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/json2.min.js")" type="text/javascript"></script>
    @RenderSection("Header", false)
}
<div id="WizardContent">
<h1>@ViewBag.ComponentName</h1>

@using (Html.BeginForm("QuickNav", null, FormMethod.Post, new { id = "QuickNavForm" }))
{
<input type="hidden" id="ComponentNameNavSelect" name="ComponentName" />
<table>
    <tr>
        @foreach (WizardComponent comp in ViewBag.Components)
        {
            if (comp.Name == ViewBag.ActiveComponent.Name)
            {
                <td><a style="padding: 2px; cursor:pointer;" onclick="changePage(@comp.Name.ToString());"><b>@comp.Name</b></a></td>    
            }
            else
            {
                <td><a style="padding: 2px; cursor:pointer; color:#888888;" onclick="changePage('@comp.Name.ToString()');"><small>@comp.Name</small></a></td>
            }
        }
    </tr>
</table>
}

<script type="text/javascript">
    function changePage(n) {
        $("#ComponentNameNavSelect").val(n.toString());
        $("#QuickNavForm").submit();
    }
</script>

<br />

@using (Html.BeginForm("Index", null, FormMethod.Post, new { id = "WizardForm" }))
{
@RenderBody()
<div id="WizardBottomNav" style="clear:both;">
        <input type="submit" value="Previous" name="@ViewBag.PreviousWizardButton" />
        <input type="submit" value="Next" name="@ViewBag.NextWizardButton" />
</div>
}

<!--end of "WizardContent"-->
</div>