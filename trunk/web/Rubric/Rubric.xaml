<UserControl x:Class="OsbleRubric.Rubric"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk">
    <!--d:DesignHeight="300" d:DesignWidth="400"-->

    <Grid x:Name="MainLayoutRoot" Background="White">
        <StackPanel x:Name="MainStackPanel">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" MaxHeight="600" MaxWidth="1000">
                <Grid x:Name="LayoutRoot" Background="White">
                </Grid>
            </ScrollViewer>
            <StackPanel HorizontalAlignment="Right">
                <Button Content="Close"></Button>
                <Button Content="Save Changes"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
