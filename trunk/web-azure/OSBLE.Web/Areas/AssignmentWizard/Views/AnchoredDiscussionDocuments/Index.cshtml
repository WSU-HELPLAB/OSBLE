    int assignmentID = Model.ID;
}

@Html.HiddenFor(m => m.ID)

<h4>Select Documents To Upload For Review</h4>

<div id="file_submission">
    <table>
        <tr>
            <td>
                @Html.Label("Upload Documents: ")

            </td>
            <td>
                @*<input type="file" id="fileToUpload" name="file" />*@
                <input type="file" data-val="true" data-val-required="At least one review document is required to continue." name="files" multiple />
                @Html.ValidationMessage("files")
            </td>
        </tr>
    </table>
</div>
