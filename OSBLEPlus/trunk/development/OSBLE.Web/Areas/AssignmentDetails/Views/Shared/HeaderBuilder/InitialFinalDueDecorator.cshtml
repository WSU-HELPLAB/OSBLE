@using OSBLE.Resources
@using OSBLE.Models.Assignments
@model DynamicDictionary
@{
    dynamic dataModel = Model;               
}
<tr>
    <th>Initial Post Due:</th>
    <td>
        <time class  ="course-local-time" >
            @dataModel.InitialPostDue.UTCToCourse(((IAssignmentTeam) dataModel.AssignmentTeam).Assignment.CourseID).ToShortDateString()
             @dataModel.InitialPostDue.UTCToCourse(((IAssignmentTeam)dataModel.AssignmentTeam).Assignment.CourseID).ToShortTimeString()
        </time>
    </td>
</tr>

<tr>
    <th>Final Post Due:</th>
    <td>
        <time class="course-local-time">
            @dataModel.DueDate.UTCToCourse(((IAssignmentTeam) dataModel.AssignmentTeam).Assignment.CourseID).ToShortDateString() 
            @dataModel.DueDate.UTCToCourse(((IAssignmentTeam)dataModel.AssignmentTeam).Assignment.CourseID).ToShortTimeString()
            </time>
    </td>
</tr>
