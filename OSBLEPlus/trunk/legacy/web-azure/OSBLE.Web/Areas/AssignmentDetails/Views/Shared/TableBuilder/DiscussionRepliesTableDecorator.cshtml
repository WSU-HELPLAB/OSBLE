@using OSBLE.Resources
@using OSBLE.Models.Assignments
@model DynamicDictionary
@{
    dynamic dataModel = Model;
    IAssignmentTeam currentTeam = dataModel.AssignmentTeam as IAssignmentTeam;
    String replyCount = dataModel.Replies.PostCount.ToString();
}
<td>
    @(Html.ActionLink(replyCount,
    "TeacherIndex", "DiscussionAssignment",
    new
    {
        assignmentId = dataModel.Replies.AssignmentID,
        courseUserId = dataModel.Replies.CourseUserID,
        discussionTeamID = dataModel.Replies.DiscussionTeamID,
        hightlightValue = OSBLE.Controllers.DiscussionAssignmentController.HighlightValue.Replies,
        area = ""
    }, new { }))
</td>